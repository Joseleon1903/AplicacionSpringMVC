<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="PersistenceManager"
		transaction-type="RESOURCE_LOCAL">

		<jta-data-source>java:/DsAplicacionWeb</jta-data-source>

		<class>com.aplicacion.rest.html.entity.Usuario</class>
		<class>com.aplicacion.rest.html.entity.Contacto</class>
		<class>com.aplicacion.rest.html.entity.DetalleContacto</class>
		<class>com.aplicacion.rest.html.entity.MotivoEstado</class>
		<class>com.aplicacion.rest.html.entity.EventoSistema</class>
		<class>com.aplicacion.rest.html.entity.EnvioSistema</class>
		
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/aplicacion_web_rest" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="root" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="eclipselink.logging.level" value="FINE" />
			<property name="eclipselink.ddl-generation" value="create-tables" />
		</properties>

	</persistence-unit>
</persistence>
